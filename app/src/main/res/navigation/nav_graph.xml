<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- AUTH FLOW -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.medicalcalculatorapp.presentation.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">

        <!-- ✅ NEW: Direct navigation to calculator list for session restoration -->
        <action
            android:id="@+id/action_splashFragment_to_calculatorListFragment"
            app:destination="@id/calculatorListFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

        <!-- Existing navigation to login -->
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.medicalcalculatorapp.presentation.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_calculatorListFragment"
            app:destination="@id/calculatorListFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_privacyPolicyFragment"
            app:destination="@id/privacyPolicyFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.medicalcalculatorapp.presentation.auth.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/privacyPolicyFragment"
        android:name="com.example.medicalcalculatorapp.presentation.auth.PrivacyPolicyFragment"
        android:label="Privacy Policy"
        tools:layout="@layout/fragment_privacy_policy" />

    <!-- MAIN APP FLOW -->
    <fragment
        android:id="@+id/calculatorListFragment"
        android:name="com.example.medicalcalculatorapp.presentation.calculators.CalculatorListFragment"
        android:label="Calculator List"
        tools:layout="@layout/fragment_calculator_list">
        <action
            android:id="@+id/action_calculatorListFragment_to_calculatorDetailFragment"
            app:destination="@id/calculatorDetailFragment" />
        <action
            android:id="@+id/action_calculatorListFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <!-- ✅ NEW: Navigation back to login for guest upgrade or sign out -->
        <action
            android:id="@+id/action_calculatorListFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/calculatorDetailFragment"
        android:name="com.example.medicalcalculatorapp.presentation.calculators.detail.CalculatorDetailFragment"
        android:label="Calculator"
        tools:layout="@layout/fragment_calculator_detail">
        <argument
            android:name="calculatorId"
            app:argType="string" />
    </fragment>

    <!-- SETTINGS FRAGMENTS -->
    <fragment
        android:id="@+id/profileEditFragment"
        android:name="com.example.medicalcalculatorapp.presentation.settings.ProfileEditFragment"
        android:label="@string/edit_profile"
        tools:layout="@layout/fragment_profile_edit" />

    <fragment
        android:id="@+id/appPreferencesFragment"
        android:name="com.example.medicalcalculatorapp.presentation.settings.AppPreferencesFragment"
        android:label="@string/app_settings"
        tools:layout="@layout/fragment_app_preferences" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.medicalcalculatorapp.presentation.settings.SettingsFragment"
        android:label="@string/profile_settings"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_settingsFragment_to_profileEditFragment"
            app:destination="@id/profileEditFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_settingsFragment_to_appPreferencesFragment"
            app:destination="@id/appPreferencesFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <!-- ✅ NEW: Settings can navigate back to login for account management -->
        <action
            android:id="@+id/action_settingsFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

    </fragment>

</navigation>