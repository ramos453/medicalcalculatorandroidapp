<?xml version="1.0" encoding="utf-8"?>
<!-- Create this file: app/src/main/res/layout/dialog_enhanced_medical_disclaimer.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Header with App Name and Compliance Badge -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚕️ MediCálculos"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnPrimary"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Aviso Médico y Términos de Uso"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnPrimary"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="🏛️ Cumplimiento Google Play Store 2024"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnPrimary"
            android:gravity="center"
            android:alpha="0.9" />

    </LinearLayout>

    <!-- Scrollable Content Container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="600dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1. EMERGENCY WARNING SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/error"
                app:strokeColor="@color/error"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="🚨 ADVERTENCIA DE EMERGENCIAS"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/iconEmergencyRead"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_info"
                            android:visibility="gone"
                            app:tint="@color/white"
                            android:contentDescription="Leído" />

                    </LinearLayout>

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/scrollViewEmergency"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/tvEmergencyWarning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/white"
                            android:lineSpacingExtra="4dp"
                            tools:text="Emergency warning text will be populated from strings.xml" />

                    </androidx.core.widget.NestedScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 2. REGULATORY DISCLAIMER SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🏛️ DECLARACIÓN REGULATORIA"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/tvRegulatoryDisclaimer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurface"
                            android:lineSpacingExtra="2dp"
                            tools:text="Regulatory disclaimer text will be populated from strings.xml" />

                    </androidx.core.widget.NestedScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 3. PROFESSIONAL REQUIREMENTS SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/accent"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="👨‍⚕️ REQUISITOS PROFESIONALES"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textStyle="bold"
                            android:textColor="@color/accent" />

                        <ImageView
                            android:id="@+id/iconProfessionalRead"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_info"
                            android:visibility="gone"
                            app:tint="@color/accent"
                            android:contentDescription="Leído" />

                    </LinearLayout>

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/scrollViewProfessional"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/tvProfessionalRequirements"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurface"
                            android:lineSpacingExtra="2dp"
                            tools:text="Professional requirements text will be populated from strings.xml" />

                    </androidx.core.widget.NestedScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 4. LIABILITY LIMITATION SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/warning"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="⚖️ LIMITACIÓN DE RESPONSABILIDAD"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textStyle="bold"
                            android:textColor="@color/warning" />

                        <ImageView
                            android:id="@+id/iconLiabilityRead"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_info"
                            android:visibility="gone"
                            app:tint="@color/warning"
                            android:contentDescription="Leído" />

                    </LinearLayout>

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/scrollViewLiability"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/tvLiabilityLimitation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurface"
                            android:lineSpacingExtra="2dp"
                            tools:text="Liability limitation text will be populated from strings.xml" />

                    </androidx.core.widget.NestedScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 5. PROFESSIONAL STATUS CONFIRMATION -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✅ CONFIRMACIÓN PROFESIONAL REQUERIDA"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkboxProfessionalStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Confirmo que soy un profesional de salud licenciado con autorización legal para usar herramientas médicas en mi jurisdicción"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 6. FINAL ACCEPTANCE TEXT -->
            <TextView
                android:id="@+id/tvFinalAcceptance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurface"
                android:lineSpacingExtra="2dp"
                tools:text="Final acceptance text will be populated from strings.xml" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Requirement Status Display -->
    <TextView
        android:id="@+id/tvAcceptanceRequirement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="@color/error"
        android:textStyle="italic"
        android:gravity="center"
        android:background="@color/primary_light"
        android:padding="8dp"
        android:visibility="visible"
        tools:text="Debe leer y confirmar todos los requisitos arriba" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/colorSurfaceVariant">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewFullTerms"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Ver Términos Completos"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRejectDisclaimer"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="No Acepto"
            android:textColor="@color/error"
            app:strokeColor="@color/error" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAcceptDisclaimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Acepto como Profesional"
            android:enabled="false"
            android:backgroundTint="@color/success" />

    </LinearLayout>

</LinearLayout>